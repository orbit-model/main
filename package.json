{
  "name": "root",
  "description": "A models abstraction for orbit.js",
  "contributors": [
    "Bernhard Halbartschlager <halbart.bernhard+orbit-model@gmail.com>"
  ],
  "keywords": [
    "orbit",
    "orbit.js",
    "orbit-model",
    "models",
    "model"
  ],
  "repository": "https://github.com/bernhard---h/orbit-model",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive --filter=@orbit-model/di exec tsc",
    "build:checked": "pnpm run install:check && pnpm run build",
    "build:watch": "pnpm --recursive --parallel --stream exec tsc -w",
    "eslint": "pnpm --recursive exec eslint --config ../../.eslintrc.js \"src/**/*.ts\" ",
    "lint": "run-s eslint prettier",
    "postinstall": "husky install && pnpm multi install --filter=!root",
    "prettier": "pnpm --recursive --parallel exec prettier --config ../../.prettierrc.yml --list-different --write \"src/**/*.ts\" \"tests/**/*.ts\" \"**/*.md\"",
    "prettier:check": "pnpm --recursive --parallel exec prettier --config ../../.prettierrc.yml --check \"src/**/*.ts\" \"tests/**/*.ts\" \"**/*.md\"",
    "pre-push": "pnpm run build && pnpm run test && cd demo/node-typescript/dist && node ./index.js",
    "publish:release": "pnpm run build:checked && lerna version --no-push && lerna publish from-git --dist-tag latest --no-git-reset",
    "publish:beta": "pnpm run build:checked && lerna version --preid=beta --no-push && lerna publish from-git --preid=beta --dist-tag beta --no-git-reset",
    "publish:canary": "pnpm run build:checked && lerna publish --canary --preid=alpha --dist-tag canary --no-git-reset",
    "test": "run-s eslint prettier:check unit",
    "unit": "pnpm --recursive --filter=\"@orbit-model/di\" exec mocha -r ts-node/register \"tests/**/*.spec.ts\""
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "chai": "^4.3.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lerna": "^5.5.0",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test",
      "pre-push": "yarn run pre-push"
    }
  }
}
